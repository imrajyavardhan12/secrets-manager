{
  "name": "secrets-cli",
  "version": "1.0.3",
  "description": "A local-first, encrypted secrets manager for developers",
  "type": "module",
  "bin": {
    "secrets": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "build": "bun build src/cli/index.ts --outdir dist --target bun --minify",
    "prepublishOnly": "bun run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "zod": "^3.22.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.7",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "secrets",
    "environment",
    "variables",
    "encryption",
    "security",
    "cli",
    "env",
    "dotenv",
    "vault",
    "password-manager"
  ],
  "author": "Rajyavardhan Singh <srajyavardhan12@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imrajyavardhan12/secrets-manager.git"
  },
  "homepage": "https://github.com/imrajyavardhan12/secrets-manager#readme",
  "bugs": {
    "url": "https://github.com/imrajyavardhan12/secrets-manager/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0"
  }
}
